extends base

block content 
    section.movies-section
        .row#main
            each movie in movies 
                .col.span-1-of-5.card#imgg
                    a(href=`/movie/${movie.slug}` )
                        img(src=`/resources/img/movieimg/${movie.movieImage}`)
                    a(href=`/movie/${movie.slug}` )
                        h3= movie.movieName
            
    footer 
        p="For Next Page"
        ul
            li
                a(href='/page/1') 1
            li
                a(href='/page/2') 2
            li
                a(href='/page/3') 3
            li
                a(href='/page/4') 4